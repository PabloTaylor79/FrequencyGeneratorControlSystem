<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>
  
  <appSettings>
    <!-- Connection Settings -->
    <add key="AutoConnect" value="false" />
    <add key="DefaultBaudRate" value="115200" />
    <add key="DefaultPort" value="COM3" />
    <add key="ConnectionTimeout" value="5000" />
    
    <!-- UI Settings -->
    <add key="UpdateInterval" value="1000" />
    <add key="Theme" value="Light" />
    <add key="Language" value="en-US" />
    <add key="WindowWidth" value="1200" />
    <add key="WindowHeight" value="800" />
    
    <!-- Logging -->
    <add key="LogLevel" value="Debug" />
    <add key="LogPath" value="logs/" />
    
    <!-- Application -->
    <add key="AppVersion" value="1.0.0" />
    <add key="AppName" value="Frequency Generator Control System" />
  </appSettings>
  
  <runtime>
    <useRandomizedStringHashAlgorithm enabled="1" />
  </runtime>
</configuration>